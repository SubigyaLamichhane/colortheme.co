// Prisma schema for colortheme.co

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Palette {
  id        String   @id // Use the same palette id as in the app
  slug      String   @unique
  name      String
  colors    String[] // hex codes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  likes     Like[]
}

model Like {
  id        String   @id @default(cuid())
  ip        String
  clientId  String
  paletteId String
  createdAt DateTime @default(now())
  palette   Palette @relation(fields: [paletteId], references: [id], onDelete: Cascade)
  @@unique([clientId, paletteId])
}

